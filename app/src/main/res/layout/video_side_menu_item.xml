<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_button_soft_blue"
    android:focusable="true"
    android:id="@+id/video_item"
    android:nextFocusRight="@id/remove_button">

    <RelativeLayout
        android:id="@+id/video_item_side_menu"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:baselineAligned="false">

        <ImageView
            android:id="@+id/remove_button"
            android:layout_width="60dp"
            android:layout_height="100dp"
            android:background="@drawable/rounded_button_red"
            android:layout_alignParentEnd="true"
            android:focusable="true"
            android:nextFocusLeft="@id/video_item"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="100dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/close_icon"
            android:layout_alignParentEnd="true"
            />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_alignParentStart="true">

            <ImageView
                android:id="@+id/video_img"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:src="@color/design_default_color_on_primary"
                android:padding="5dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/video_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nome do vídeo"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8:00"
                    android:textColor="@color/white"
                    android:textSize="16dp"/>

                <TextView
                    android:id="@+id/views"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3 mi visualizações"
                    android:textColor="@color/white"
                    android:textSize="16dp"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>