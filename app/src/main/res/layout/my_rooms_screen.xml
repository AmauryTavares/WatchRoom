<?xml version="1.0" encoding="utf-8"?>
<!-- By: Amaury -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/default_background"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/back_button"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:background="@drawable/back_button"
        android:focusable="true"
        android:nextFocusDown="@id/name_text"
        android:onClick="Back"
        >

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@color/tranparent"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:src="@drawable/left_arrow_icon"
            android:tooltipText="@string/buy_1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Voltar"
            android:textSize="30dp" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="-60dp"
        android:text="Minhas Salas"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">

        <ImageButton
            android:id="@+id/search_button"
            android:layout_width="110dp"
            android:layout_height="45dp"
            android:layout_marginLeft="350dp"
            android:background="@drawable/rounded_button_green"
            android:paddingVertical="8dp"
            android:paddingRight="15dp"
            android:scaleType="fitEnd"
            android:src="@drawable/search_icon"
            android:focusable="true"
            android:nextFocusUp="@id/back_button"
            android:nextFocusLeft="@id/name_text"
            android:nextFocusDown="@id/rooms_list"
            android:onClick="Search"/>

        <EditText
            android:id="@+id/name_text"
            android:layout_width="400dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:background="@drawable/rounded_edittext"
            android:hint="Pesquise por nome ou cÃ³digo da sala"
            android:inputType="text"
            android:paddingLeft="15dp"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:focusable="true"
            android:nextFocusUp="@id/back_button"
            android:nextFocusRight="@id/search_button"
            android:nextFocusDown="@id/rooms_list"
            >

            <requestFocus />
        </EditText>


    </RelativeLayout>

    <GridView
        android:id="@+id/rooms_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        android:verticalSpacing="10dp"
        android:horizontalSpacing="-60dp"
        android:nextFocusUp="@id/name_text"
        android:numColumns="2"
        android:gravity="center"
        tools:listitem="@layout/my_room_item"
        android:descendantFocusability="afterDescendants"/>

    <TextView
        android:id="@+id/empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="30sp"/>

</LinearLayout>